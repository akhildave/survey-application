<div class="page-header">
  <h3>Listing languages</h3>
</div>

  <div class="row">
      <div class="col-md-12"> 

          <%= link_to 'New Language', new_admin_language_path, class: 'btn btn-warning', :style =>"float:right;"  %> 
      </div> 
  </div>  
  <br/>

<table class="sortable table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.name rescue '' %></td>
        <td><%= language.code %></td>
        <td><%= link_to 'Show', [:admin, language], class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_admin_language_path(language), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', [:admin, language], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

