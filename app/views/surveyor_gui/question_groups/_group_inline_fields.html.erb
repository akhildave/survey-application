<%= simple_fields_for :question_group, @question_group do |qg| %>
  <br/>
  <br/>
  
  <%= qg.hidden_field :id %>
  <%= qg.hidden_field :display_type, value: "inline" %>
  <div class="group_inline">
    <div class="group_inline_header">
      <span class="handle"></span>
      <span>
        Sub Question
      </span>
      <span>
        Question Type
      </span>
      <span>
        Possible Answers
      </span>
    </div>
    <%= render "group_inline_field", qg: qg %>
	
	<br/>
	<br/>
    <div class="add_question">
      <span></span>
      <br/>
	  <span class="add_group_inline_question btn btn-warning btn-xs" >Add Group Inline Question </span>
    </div>
  </div>
<% end -%>
