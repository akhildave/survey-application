<div class="column2">
  <div class="shadebox round">
  <div id="survey">
    <h1 class="round-top"><%= @title %></h1>
      <%= form_tag surveyforms_path, :method => 'get'  do %>
        <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil , :class=> "btn btn-default" %>
        </p>
    <% end %>
  <%= will_paginate %>
  <br />
<table class="table table-bordered ">
  <tr>
    <th>Title</th>
    <th>Version</th>
	<th>Responses</th>
    <th>Actions</th>
  </tr>
  <% for survey in @surveyforms %>
    <tr>
      <td><%= survey.title %></td>
      <td><%= survey.survey_version %></td>
	  <td><%= survey.response_sets.count %></td>
      <td><%= link_to "Show", survey, class: 'btn btn-xs btn-default' %>&nbsp
      <%= link_to "Edit", edit_surveyform_path(survey), class: 'btn btn-xs btn-warning' %>&nbsp
      <%= link_to "Clone", clone_survey_surveyform_path(survey), class: 'btn btn-xs btn-info' %>&nbsp
      <%= link_to "Destroy", survey, data: { confirm: 'Are you sure?' }, :method => :delete, class: 'btn btn-xs btn-danger' %>&nbsp; 
      <%= link_to "Run Report", report_path(survey), class: 'btn btn-xs btn-primary' %> &nbsp;
      <%= link_to "View Responses" , responses_path(id: survey), class: 'btn btn-xs btn-success' %></td>
    </tr>
  <% end %>
</table>
<br />
<%= will_paginate %>
<p>
  <%= link_to "New Survey", new_surveyform_path()  , :class=> "btn btn-default" %>&nbsp
  <%= link_to "Take a Survey", surveyor.available_surveys_path  , :class=> "btn btn-default" %>&nbsp
</p>
</div>
  </div>
</div>
